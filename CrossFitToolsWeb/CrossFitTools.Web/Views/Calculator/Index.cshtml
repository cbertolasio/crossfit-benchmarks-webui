@using CrossFitTools.Web.HtmlHelpers
@model CrossFitTools.Web.Models.Calculator.CalculatorViewModel

@{
    ViewBag.Title = "Calculate Your Weight Percentages";
}

<section id="calculator-section">
    <div class="row">
        <div class="span12">

            <h1>Percentage Calculator</h1>
            <p>Often times - we have to complete lifts using percentages based off of our 1 Rep Max.  Use this
    calculator to help you figure out what weight you need to use.
            </p>

            <label>Weight:</label>
            <input data-bind="value: weight" />

            <span class="btn" data-bind="click:calculate">Calculate</span>
            <span class="btn" data-bind="click:clear">Clear</span>
        </div>
        <br />
    </div>

    <div class="row">
        <div class="span4" data-bind="foreach:percentages,visible:percentages().length > 0" style="display:none">
            <div style="float: left; min-height: 3em; width: 3.5em; padding: .5em; margin: .5em;" class="thumbnail">
                <small data-bind="text: label" class="muted"></small></br>
                    <strong class="text-info" data-bind="text: value" style="font-size:1.3em"></strong>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        @Html.ToJSVar("calculatorViewModel", Model)
    </script>
</section>