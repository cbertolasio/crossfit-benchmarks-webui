@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Summary</h2>
    <div class="row">
        <div id="summary-content" class="span8">
            <h4>History</h4>
            <ul id="wodItems" data-bind="foreach: value()" class="thumbnails">
            <li class="span8">
                <div class="thumbnail" style="min-height:80px;" data-bind="attr:{id:WorkoutLogId}">
                    <div>
                        <p><span data-bind="visible:IsAPersonalRecord" class="label label-important lead"><i class="icon-star icon-white"></i>&nbsp;&nbsp;New PR&nbsp;&nbsp;&nbsp;</span>
                        <span data-bind="text:WorkoutName" class="label label-info"></span><span class="muted"> was logged <small class="muted"> about <span data-bind="text:DateOfWod"></span></small></span>.  You scored <span class="score" data-bind="text:Score"></span>!</p>
                        <p>Your Notes: <span data-bind="text:Notes"></span></p>
                        @*<p>You logged a score of <span>150</span> and this was NOT a <span>new personal record</span></p>*@
                        @*<span data-bind="text:WorkoutType" class="text-info"></span>*@
                    </div>
                </div>
            </li>
        </ul>
        </div>
        <div class="span4"> <h4>Your Profile</h4><h4>Your Settings</h4>
        </div>
    </div>


@*<pre>@Html.ToJson((object)ViewBag.summaryData)</pre>*@
<script type="text/javascript">
    @Html.ToJSVar("summaryData", (object)ViewBag.summaryData)
</script>