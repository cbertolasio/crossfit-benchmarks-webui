@model WorkoutLogEntryViewModel

<div id="addLogEntry-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close icon-white" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Add a Benchmark Log Entry</h3>
    </div>

    <div class="modal-body">


        <form class="form-horizontal">

        <div class="control-group">
            <label class="control-label">Score</label>
            <div class="controls">
                <input id="score" type="text" data-bind="value:addNewViewModel().score()" value="" />
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Date</label>
            <div class="controls">
                <div class="input-append date" id="dp3" data-bind="attr:{'data-date':moment(addNewViewModel().dateCreated()).format('MM/DD/YYYY')}" data-date-format="mm/dd/yyyy">
                    <input class="span2" size="16" type="text" data-bind="value:moment(addNewViewModel().dateCreated()).format('MM/DD/YYYY')">
                    <span class="add-on"><i class="icon-th"></i></span>
                </div>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" data-bind="checked:addNewViewModel().isAPersonalRecord()" />
                    Is this a PR?
                </label>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Note</label>
            <div class="controls">
                <textarea id="note" rows="6" data-bind="text:addNewViewModel().note()"></textarea>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input type="hidden" id="WorkoutId" data-bind="value:addNewViewModel().workoutId()" value="0" />
            </div>
        </div>
        
        </form>
    </div>

    <div class="modal-footer">
        <button class="btn cancel-button" data-dismiss="modal"><i class="icon-remove-sign"></i>Cancel</button>
        <button class="btn btn-primary save-button"><i class="icon-ok-sign icon-white"></i>Save</button>

    </div>

</div>


<script type="text/javascript">
    @Html.ToJSVar("workoutLogEntryViewModel", Model)
</script>