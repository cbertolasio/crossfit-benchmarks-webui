@model AddLogEntryViewModel

<div id="addLogEntry-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close icon-white" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Add a Benchmark Log Entry</h3>
    </div>

    <div class="modal-body">

        @using (Ajax.BeginForm("AddLogEntry", "Logger", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "CFBM.Benchmarks.onAddLogEntrySuccess" }, new { @class = "form-horizontal addNewLogEntry-form" })) {
        
        <div class="control-group">
            <label class="control-label key-field">Selected Workout</label>
            <div class="controls">
                <h3 class="text-info" id="selectedWorkoutName" data-bind="text:addNewViewModel().selectedWorkoutName()"></h3>
            </div>
        </div>
            
        <div class="control-group">
            <label class="control-label">Score</label>
            <div class="controls">
                <input name="score" id="score" type="text" data-bind="value:addNewViewModel().score()"/>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Date</label>
            <div class="controls">
                <div class="input-append date" id="dp3" data-bind="attr:{'data-date':moment(addNewViewModel().dateCreated()).format('MM/DD/YYYY')}" data-date-format="mm/dd/yyyy">
                    <input name="DateCreated" id="DateCreated" class="span2" size="16" type="text" data-bind="value:moment(addNewViewModel().dateCreated()).format('MM/DD/YYYY')">
                    @*@Html.TextBoxFor(model => model.DateCreated, new {data_bind="value:moment(addNewViewModel().dateCreated()).format('MM/DD/YYYY')", @type="text", size="16", @class="span2", @id="DateCreated"})*@
                    <span class="add-on"><i class="icon-th"></i></span>
                </div>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    @*<input name="IsAPersonalRecord" id="IsAPersonalRecord" type="checkbox" data-bind="checked:addNewViewModel().isAPersonalRecord()" />*@
                    @Html.CheckBoxFor(model => model.IsAPersonalRecord, new {data_bind="checked:addNewViewModel().isAPersonalRecord()"})
                    Is this a PR?
                </label>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Note</label>
            <div class="controls">
                <textarea name="Note" id="Note" rows="6" data-bind="text:addNewViewModel().note()"></textarea>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input name="WorkoutId" type="hidden" id="SelectedWorkoutId" data-bind="value:addNewViewModel().selectedWorkoutId()" value="" />
                <input name="UserId" type="hidden" id="UserId" data-bind="value:addNewViewModel().userId()" value="" />
                <input name="LogEntryType" type="hidden" id="LogEntryType" data-bind="value:addNewViewModel().logEntryType()" value="" />
                @*@Html.HiddenFor(model => model.LogEntryType, new {data_bind="value:addNewViewModel().logEntryType()"})
                @Html.HiddenFor(model => model.Score, new {data_bind="value:addNewViewModel().score()"})*@
            </div>
        </div>
        
        
        }
    </div>

    <div class="modal-footer">
        <button class="btn cancel-button" data-dismiss="modal"><i class="icon-remove-sign"></i>  Cancel</button>
        <button class="btn btn-primary save-button"><i class="icon-ok-sign icon-white"></i>  Save</button>

    </div>

</div>


<script type="text/javascript">
    @Html.ToJSVar("workoutLogEntryViewModel", Model)
</script>